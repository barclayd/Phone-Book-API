{
  "name": "myfridge-server",
  "version": "1.0.7",
  "license": "UNLICENSED",
  "homepage": "https://server.my-fridge.com",
  "description": "myFridge server. Built with TypeScript, typeorm, type-graphql and Apollo Server",
  "repository": "https://github.com/barclayd/myFridge-server",
  "scripts": {
    "start:dev": "NODE_ENV=development nodemon",
    "setup:dev": "./scripts/setupDB.sh",
    "start:production": "NODE_ENV=production node dist/src/index.js",
    "reset:dev": "./scripts/resetDev.sh",
    "start:docker": "./scripts/setupDocker.sh",
    "build": "rimraf dist && tsc -b",
    "generate:schema": "ts-node -r tsconfig-paths/register ./scripts/generateSchema.ts",
    "lint": "eslint '*/**/*.{js,ts}' --fix",
    "test:db:create": "./scripts/setupTestDB.sh dev",
    "test:db:create:ci": "./scripts/setupTestDB.sh",
    "test:db:setup": "ts-node ./tests/config/setupDatabaseForTest.ts",
    "test:unit": "NODE_ENV=test npm run test:db:create && jest --testPathPattern=tests/unit --no-cache",
    "test:unit:ci": "NODE_ENV=ci npm run test:db:create:ci && NODE_ENV=ci jest --testPathPattern=tests/unit --no-cache",
    "test:integration": "NODE_ENV=test npm run test:db:create && jest --testPathPattern=tests/integration --no-cache",
    "test:integration:ci": "NODE_ENV=ci npm run test:db:create:ci && NODE_ENV=ci jest --testPathPattern=tests/integration --no-cache"
  },
  "dependencies": {
    "apollo-server-express": "^2.17.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.11.0",
    "cookie": "^0.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-query-complexity": "^0.6.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "nodemailer": "^6.4.2",
    "pg": "^7.13.0",
    "reflect-metadata": "^0.1.10",
    "tsconfig-paths": "^3.9.0",
    "type-graphql": "^1.0.0",
    "typeorm": "^0.2.25",
    "typeorm-naming-strategies": "^1.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie": "^0.3.3",
    "@types/express": "^4.17.7",
    "@types/express-serve-static-core": "^4.17.9",
    "@types/faker": "^4.1.11",
    "@types/jest": "^25.2.3",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^12.12.8",
    "@types/node-fetch": "^2.5.7",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "faker": "^4.1.0",
    "jest": "^26.6.3",
    "nodemon": "^1.19.4",
    "prettier": "^2.1.2",
    "start-server-and-test": "^1.10.6",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "_moduleAliases": {
    "@": "dist/src"
  }
}
